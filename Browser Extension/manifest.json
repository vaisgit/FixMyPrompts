{
  "manifest_version": 3,
  "name": "FixMyPrompts Helper",
  "version": "1.0.0",
  "description": "Refine prompts in ChatGPT, Claude, Gemini, or Grok without leaving the page.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.xai.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://fixmyprompts.com/api/rewrite"
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png", "icon16.png", "icon48.png", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
} 